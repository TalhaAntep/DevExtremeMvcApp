@model DevExtremeMvcApp2.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<style>
    .outer-container {
        perspective: 1000px;
        width: 400px;
        margin: 100px auto;
    }

    .flip-card {
        width: 100%;
        height: 380px;
        position: relative;
        transition: transform 0.8s;
       
    }

       

    .form-face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        padding: 20px;
        box-sizing: border-box;
        background: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 10px;
    }


    .switch-link {
        text-align: center;
        margin-top: 10px;
    }

        .switch-link a {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }

    input:not([type="checkbox"]), button {
        width: 100%;
        margin-bottom: 10px;
        padding: 8px;
    }

    
</style>

<div class="outer-container">
    <div class="flip-card" id="flipCard">
        
        <div class="form-face">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                <h2>Login</h2>

                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email)

                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)

                <label id="RememberMe">@Html.CheckBoxFor(m => m.RememberMe) Remember me</label>

                <button style="margin-top:20px;" type="submit">Login</button>
            }

            <div class="switch-link">
                <p>
                    Don't have an account?  @Html.ActionLink("Register", "Register", "Account")
                </p>
            </div>
        </div>
    </div>
</div>
