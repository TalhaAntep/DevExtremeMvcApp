@model DevExtremeMvcApp2.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<style>
    .outer-container {
        perspective: 1000px;
        width: 400px;
        margin: 100px auto;
    }

    .flip-card {
        width: 100%;
        height: 380px;
        position: relative;
        transition: transform 0.8s;
    }



    .form-face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        padding: 20px;
        box-sizing: border-box;
        background: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 10px;
    }



    .switch-link {
        text-align: center;
        margin-top: 10px;
    }

        .switch-link a {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }

    input, button {
        display: block;
        width: 100%;
        margin-bottom: 10px;
        padding: 8px;
    }
</style>


<div class="outer-container">
    <div class="flip-card" id="flipCard">
        <div class="form-face">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm" }))
            {
                @Html.AntiForgeryToken()
                <h2>Register</h2>

                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })


                <button style="margin-top:20px;" type="submit">Register</button>
            }

            <div class="switch-link">
                <p>Already have an account? @Html.ActionLink("Login", "Login", "Account")</p>
            </div>
        </div>
    </div>
</div>