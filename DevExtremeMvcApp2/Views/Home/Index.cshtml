<style>
    .shape-button {
        position: relative;
        width: 240px;
        height: 240px;
        background: transparent;
        border: none;
        outline: none;
        padding: 0;
        margin: 20px;
        cursor: pointer;
        overflow: visible;
    }

    .shape-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #1B1F21;
        animation: shapeChange 9s infinite;
        transition: clip-path 0.1s ease-in-out;
        z-index: 0;
    }

    .shape-text {
        position: relative;
        color: white;
        font-size: 16px;
        font-weight: bold;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        pointer-events: none; 
    }

    @@keyframes shapeChange {
        0% {
            clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%); /* Kare */
        }

        33% {
            clip-path: polygon(15% 0%, 85% 0%, 85% 100%, 15% 100%); /* Dikdörtgen */
        }

        66% {
            /* 4 nokta ile görünürde üçgen: üst iki nokta ayný, alt sað sola çok yakýn */
            clip-path: polygon(50% 0%, 100% 100%, 99% 100%, 0% 100%);
        }

        100% {
            clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
        }
    }
</style>
<div style="display:flex; justify-content:center; align-items:center; margin-top:100px;" >

    @using (Html.BeginForm("Index", "Shape", FormMethod.Post, new { id = "shapeForm" }))
    {
        <button class="shape-button" type="submit">
            <div class="shape-bg"></div>
            <span class="shape-text">My Shapes</span>
        </button>
    }
</div>