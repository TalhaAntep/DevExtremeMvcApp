<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - DevExtremeMvcApp2</title>

    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/dx.light.css" rel="stylesheet" />

    <!-- Google Fonts örnek, ihtiyaca göre -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Intel+One+Mono&family=Rubik&display=swap" rel="stylesheet" />

    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")

    @Scripts.Render("~/Scripts/modernizr-2.8.3.js")  
</head>
<body style="padding-top: 3.5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container-fluid" >
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">MvcApp</a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"></span>
            </button>



                <div id="navbar" class="collapse navbar-collapse" style="margin-left:550px;">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link active">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#about" class="nav-link">About</a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Login", "Account")" class="nav-link">Login</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Register", "Account")" class="nav-link">Register</a>
                            </li>
                        }
                        else
                        {
                            <form action="@Url.Action("LogOff", "Account")" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link btn btn-link" style="background:none; border:none; padding-top:8px;">
                                    Logout (@User.Identity.Name)
                                </button>
                            </form>
                        }
                    </ul>
                </div>


          
            
        </div>
    </nav>

    <main class="container" style="margin-top: 1.5rem;">
        @RenderBody()
    </main>

    @Scripts.Render("~/Scripts/jquery-3.6.3.min.js")
    @Scripts.Render("~/Scripts/jszip.min.js")
    @Scripts.Render("~/Scripts/dx.all.js")

 

    <!-- View bazlı scriptler için yer -->
    @RenderSection("Scripts", required: false)
</body>
</html>
